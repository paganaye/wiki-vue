{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "alwaysStrict": true,
        "noEmit": true,
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true
    }
}